{
  "hosting": {
    "public": "build",
    "headers": [
      {
        "source": "/service-worker.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/resume",
        "destination": "/CarolChenResume.pdf"
      },
      {
        "source": "/bestaplaid",
        "destination": "/projects/bestaplaid.html"
      },
      {
        "source": "/copywrite",
        "destination": "/projects/copywrite.html"
      },
      {
        "source": "/blog/**",
        "destination": "/blog/404.html"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/eng-calc",
        "destination": "/index.html"
      },

      {
        "source": "**",
        "destination": "/404.html"
      },
      {
        "source": "/blog",
        "destination": "/blog/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/blog/jits-impls/",
        "destination": "/blog/technical/jits-impls/",
        "type": 301
      },
      {
        "source": "/blog/jits-intro/",
        "destination": "/blog/technical/jits-intro/",
        "type": 301
      },
      {
        "source": "/blog/founding-bad",
        "destination": "/blog/techadjacent/founding-bad/",
        "type": 301
      },
      {
        "source": "/blog/real-good-things-about-internships/",
        "destination": "/blog/techadjacent/real-good-things-about-internships/",
        "type": 301
      },
      {
        "source": "/blog/no-not-good-enough/",
        "destination": "/blog/techadjacent/no-not-good-enough/",
        "type": 301
      },
      {
        "source": "/blog/group-hugging-theory/",
        "destination": "/blog/misc/group-hugging-theory/",
        "type": 301
      }
    ]
  }
}
