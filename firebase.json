{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build",
    "headers": [
      {
        "source": "/service-worker.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source" : "**/*.@(js|css)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=604800"
        } ]
      },
      {
        "source" : "**/*.@(jpg|jpeg|gif|png)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=604800"
        } ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/blog",
        "destination": "/blog/index.html"
      },
      {
        "source": "/resume",
        "destination": "/CarolChenResume.pdf"
      },
      {
        "source": "/",
        "destination": "/index.html"
      }
    ]
  }
}
