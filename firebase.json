{
  "hosting": {
    "public": "build",
    "headers": [
      {
        "source": "/service-worker.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/resume",
        "destination": "/CarolChenResume.pdf"
      },
      {
        "source": "/blog/**",
        "destination": "/blog/404.html"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/eng-calc",
        "destination": "/index.html"
      },

      {
        "source": "**",
        "destination": "/404.html"
      },
      {
        "source": "/blog",
        "destination": "/blog/index.html"
      }
    ]
  }
}
